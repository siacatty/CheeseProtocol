{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Cheese Protocol (Release)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/Source/CheeseProtocol.csproj",
        "-c",
        "Release"
      ],
      "options": {
        "env": {
          "RIMWORLD_DIR": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\RimWorld"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": "$msCompile"
    },

    {
      "label": "Publish mod (folders + Readme)",
      "type": "shell",
      "command": "${workspaceFolder}\\tools\\publish_mod.cmd",
      "args": [
        "${workspaceFolder}"
      ],
      "problemMatcher": []
    },

    {
      "label": "Build + Publish (Release)",
      "dependsOn": [
        "Build Cheese Protocol (Release)",
        "Publish mod (folders + Readme)"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}